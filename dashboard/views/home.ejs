<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WITHER AI - Discord Bot Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(-45deg, #000000, #333333, #1a1a1a, #000000);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            padding: 20px;
            overflow-x: hidden;
            position: relative;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Animated Particles/Orbs Background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 20% 30%, rgba(88, 101, 242, 0.15) 0%, transparent 50%),
                        radial-gradient(circle at 80% 70%, rgba(255, 69, 0, 0.15) 0%, transparent 50%);
            z-index: -1;
            animation: orbMove 20s ease-in-out infinite alternate;
        }

        @keyframes orbMove {
            0% { transform: scale(1) translate(0, 0); }
            100% { transform: scale(1.2) translate(5%, 5%); }
        }

        .container {
            text-align: center;
            padding: 40px;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
            max-width: 700px;
            width: 100%;
            position: relative;
            z-index: 10;
        }
        h1 {
            font-size: 3em;
            margin-bottom: 20px;
            text-shadow: 0 0 20px rgba(88, 101, 242, 0.5);
            letter-spacing: 2px;
        }
        h2 {
            font-size: 1.8em;
            margin: 30px 0 15px 0;
            color: #5865F2;
        }
        .status {
            font-size: 1.5em;
            margin: 20px 0;
        }
        .status-badge {
            display: inline-block;
            padding: 10px 20px;
            background: #00ff00;
            color: #000;
            border-radius: 25px;
            font-weight: bold;
            box-shadow: 0 0 15px rgba(0, 255, 0, 0.5);
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.05); opacity: 0.8; }
        }
        .divider {
            border: none;
            height: 1px;
            background: linear-gradient(to right, transparent, rgba(255,255,255,0.3), transparent);
            margin: 30px 0;
        }
        .about-section {
            background: rgba(88, 101, 242, 0.1);
            border-radius: 15px;
            padding: 25px;
            margin: 20px 0;
            text-align: left;
            border-left: 4px solid #5865F2;
        }
        .about-section p {
            margin: 10px 0;
            font-size: 1.1em;
            line-height: 1.6;
        }
        .about-section .highlight {
            color: #5865F2;
            font-weight: bold;
        }
        .features {
            margin: 30px 0;
            text-align: left;
            display: inline-block;
        }
        .features li {
            margin: 10px 0;
            font-size: 1.1em;
            display: flex;
            align-items: center;
        }
        .features li::before {
            content: '✦';
            color: #5865F2;
            margin-right: 10px;
        }
        .btn {
            display: inline-block;
            padding: 15px 30px;
            margin: 10px 5px;
            background: #5865F2;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-size: 1.1em;
            font-weight: bold;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(88, 101, 242, 0.3);
        }
        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(88, 101, 242, 0.5);
            background: #4752C4;
        }
        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.2);
        }
        .buttons-container {
            margin: 25px 0;
        }
        .info {
            margin-top: 30px;
            font-size: 0.9em;
            opacity: 0.8;
        }
        .menu-icon {
            position: fixed;
            top: 20px;
            left: 20px;
            width: 45px;
            height: 45px;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
            border-radius: 8px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            z-index: 1001;
            gap: 5px;
            padding: 10px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .menu-icon span {
            display: block;
            width: 22px;
            height: 2px;
            background: #ffffff;
            border-radius: 2px;
            transition: all 0.3s;
        }
        .side-menu {
            position: fixed;
            top: 0;
            left: -280px;
            width: 280px;
            height: 100vh;
            background: rgba(15, 15, 15, 0.95);
            backdrop-filter: blur(20px);
            z-index: 1000;
            transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            padding-top: 80px;
            box-shadow: 5px 0 30px rgba(0, 0, 0, 0.8);
            border-right: 1px solid rgba(255, 255, 255, 0.05);
        }
        .side-menu.open {
            left: 0;
        }
        .side-menu a {
            display: block;
            padding: 15px 25px;
            color: #ffffff;
            text-decoration: none;
            font-size: 1.1em;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s;
        }
        .side-menu a:hover {
            background: rgba(88, 101, 242, 0.2);
            padding-left: 35px;
            color: #5865F2;
        }
        
        /* Snowflake Animation */
        .snowflake {
            position: fixed;
            top: -10px;
            color: white;
            font-size: 1.2em;
            user-select: none;
            z-index: 9;
            pointer-events: none;
            animation: fall linear infinite;
        }

        @keyframes fall {
            0% { transform: translateY(0vh) rotate(0deg); }
            100% { transform: translateY(105vh) rotate(360deg); }
        }
        .discord-btn-container {
            display: inline-flex;
            align-items: center;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 8px 20px 8px 10px;
            border-radius: 15px;
            text-decoration: none;
            color: white;
            margin-bottom: 30px;
            transition: all 0.3s ease;
            animation: float 3s ease-in-out infinite;
        }
        .discord-icon-wrapper {
            background: #1e1f22;
            padding: 6px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
        }
        .discord-logo-img {
            width: 20px;
            height: 20px;
            color: #5865F2;
        }
        .discord-text {
            font-size: 1.1em;
            font-weight: 500;
        }
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
    </style>
    <script>
        function toggleMenu() {
            document.getElementById('sideMenu').classList.toggle('open');
        }
        
        function createSnowflake() {
            const snowflake = document.createElement('div');
            snowflake.classList.add('snowflake');
            snowflake.innerHTML = '❄';
            snowflake.style.left = Math.random() * 100 + 'vw';
            snowflake.style.animationDuration = Math.random() * 3 + 4 + 's';
            snowflake.style.opacity = Math.random() * 0.7 + 0.3;
            snowflake.style.fontSize = Math.random() * 10 + 10 + 'px';
            document.body.appendChild(snowflake);
            setTimeout(() => { snowflake.remove(); }, 7000);
        }
        setInterval(createSnowflake, 200);
    </script>
</head>
